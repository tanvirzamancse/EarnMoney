<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="HeaderTvStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/textColorAppColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SimpleTvStyle">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/textColorAppColor</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SimpleTvStyleForForgetPassword">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/shape_tv_click</item>
    </style>

    <style name="EdittextStyle">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

</resources>